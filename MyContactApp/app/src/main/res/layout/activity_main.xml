<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="Number"
            android:layout_width="105dp"
            android:layout_height="41dp"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="156dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:textSize="25sp"/>
    <TextView
            android:text="Name"
            android:layout_width="85dp"
            android:layout_height="41dp"
            android:id="@+id/textView5" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="88dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:textSize="25sp"/>
    <EditText
            android:layout_width="159dp"
            android:layout_height="39dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_name" android:layout_marginTop="92dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="112dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="112dp"/>
    <Button
            android:text="ADD CONTACT"
            android:layout_width="104dp"
            android:layout_height="51dp"
            android:id="@+id/button" android:onClick="addData"
            android:layout_marginTop="388dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="56dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="56dp"/>
    <TextView
            android:text="My Contact App"
            android:layout_width="156dp"
            android:layout_height="52dp"
            android:id="@+id/textView2" android:textSize="20sp" android:layout_marginStart="112dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="112dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="138dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_phone" android:layout_marginTop="156dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="136dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="136dp"/>
    <TextView
            android:text="Email "
            android:layout_width="94dp"
            android:layout_height="50dp"
            android:id="@+id/textView3" android:layout_marginTop="212dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:textSize="25sp"/>
    <EditText
            android:layout_width="163dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_email" android:layout_marginTop="212dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="136dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="136dp"/>
    <Button
            android:text="View Contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view" android:onClick="viewData"
            android:layout_marginTop="388dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="172dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="172dp"/>
    <Button
            android:text="SEARCH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:layout_marginTop="448dp"
            app:layout_constraintTop_toTopOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="136dp" android:layout_marginStart="136dp" android:onClick="searchRecord"/>

</android.support.constraint.ConstraintLayout>